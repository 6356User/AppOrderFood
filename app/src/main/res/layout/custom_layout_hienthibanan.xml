<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/size5dp">

    <TextView
        android:id="@+id/txtTenBanAn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/size18sp"
        android:textStyle="bold"
        android:text="@string/tenbanan"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/size5dp"/>
    
    <ImageView
        android:id="@+id/imgBanAn"
        android:src="@drawable/banan"
        android:layout_width="@dimen/size100dp"
        android:layout_height="@dimen/size100dp"
        android:layout_below="@+id/txtTenBanAn"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/imgGoiMon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBanAn"
        android:layout_marginStart="@dimen/size5dp"
        android:layout_marginTop="@dimen/size5dp"
        android:layout_marginEnd="@dimen/size5dp"
        android:layout_marginBottom="@dimen/size5dp"
        android:src="@drawable/goimon"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/imgThanhToan"
        android:src="@drawable/thanhtoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBanAn"
        android:layout_toRightOf="@+id/imgGoiMon"
        android:layout_margin="@dimen/size5dp"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/imgAnButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgBanAn"
        android:layout_marginStart="@dimen/size5dp"
        android:layout_marginTop="@dimen/size5dp"
        android:layout_marginEnd="@dimen/size5dp"
        android:layout_marginBottom="@dimen/size5dp"
        android:layout_toRightOf="@+id/imgThanhToan"
        android:src="@drawable/anbutton"
        android:visibility="invisible" />

</RelativeLayout>